{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport TodoItem from '@/components/TodoItem.vue';\nimport TaskForm from '@/components/TaskForm.vue';\nimport axios from 'axios';\nexport default {\n  name: 'App',\n  components: {\n    TodoItem,\n    TaskForm\n  },\n  data() {\n    return {\n      tasks: [],\n      apiTasks: [],\n      loading: false\n    };\n  },\n  methods: {\n    addTask(task) {\n      this.tasks.push({\n        ...task,\n        id: Date.now()\n      });\n    },\n    toggleTask(task) {\n      task.completed = !task.completed;\n    },\n    deleteTask(task) {\n      const index = this.tasks.indexOf(task);\n      if (index > -1) {\n        this.tasks.splice(index, 1);\n      }\n    },\n    toggleApiTask(task) {\n      task.completed = !task.completed;\n    },\n    deleteApiTask(task) {\n      const index = this.apiTasks.indexOf(task);\n      if (index > -1) {\n        this.apiTasks.splice(index, 1);\n      }\n    },\n    async loadTasksFromApi() {\n      this.loading = true;\n      try {\n        const response = await axios.get('https://dummyjson.com/todos?limit=5');\n        this.apiTasks = response.data.todos;\n      } catch (error) {\n        console.error('Error cargando tareas:', error);\n      } finally {\n        this.loading = false;\n      }\n    }\n  }\n};","map":{"version":3,"names":["TodoItem","TaskForm","axios","name","components","data","tasks","apiTasks","loading","methods","addTask","task","push","id","Date","now","toggleTask","completed","deleteTask","index","indexOf","splice","toggleApiTask","deleteApiTask","loadTasksFromApi","response","get","todos","error","console"],"sources":["src/App.vue"],"sourcesContent":["<template>\r\n  <div class=\"container my-4\">\r\n    <h1 class=\"text-center mb-4\">Gestor de Tareas</h1>\r\n    \r\n    <div class=\"row\">\r\n      <!-- Tareas Manuales -->\r\n      <div class=\"col-md-6\">\r\n        <div class=\"card\">\r\n          <div class=\"card-body\">\r\n            <h2 class=\"card-title h4\">Mis Tareas</h2>\r\n            <TaskForm @task-added=\"addTask\" />\r\n            <div v-if=\"tasks.length === 0\" class=\"text-center text-muted my-4\">\r\n              No hay tareas pendientes\r\n            </div>\r\n            <div v-else>\r\n              <TodoItem\r\n                v-for=\"task in tasks\"\r\n                :key=\"task.id\"\r\n                :title=\"task.title\"\r\n                :completed=\"task.completed\"\r\n                @toggle-completion=\"toggleTask(task)\"\r\n                @delTodo=\"deleteTask(task)\"\r\n              />\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- Tareas desde API -->\r\n      <div class=\"col-md-6\">\r\n        <div class=\"card\">\r\n          <div class=\"card-body\">\r\n            <h2 class=\"card-title h4\">Tareas desde API</h2>\r\n            <button \r\n              class=\"btn btn-primary mb-3\"\r\n              @click=\"loadTasksFromApi\"\r\n              :disabled=\"loading\"\r\n            >\r\n              <i class=\"bi bi-cloud-download me-2\"></i>\r\n              {{ loading ? 'Cargando...' : 'Cargar Tareas' }}\r\n            </button>\r\n            <div v-if=\"apiTasks.length === 0 && !loading\" class=\"text-center text-muted my-4\">\r\n              No hay tareas cargadas\r\n            </div>\r\n            <div v-else>\r\n              <TodoItem\r\n                v-for=\"task in apiTasks\"\r\n                :key=\"task.id\"\r\n                :title=\"task.todo\"\r\n                :completed=\"task.completed\"\r\n                @toggle-completion=\"toggleApiTask(task)\"\r\n                @delTodo=\"deleteApiTask(task)\"\r\n              />\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport TodoItem from '@/components/TodoItem.vue'\r\nimport TaskForm from '@/components/TaskForm.vue'\r\nimport axios from 'axios'\r\n\r\nexport default {\r\n  name: 'App',\r\n  components: {\r\n    TodoItem,\r\n    TaskForm\r\n  },\r\n  data() {\r\n    return {\r\n      tasks: [],\r\n      apiTasks: [],\r\n      loading: false\r\n    }\r\n  },\r\n  methods: {\r\n    addTask(task) {\r\n      this.tasks.push({\r\n        ...task,\r\n        id: Date.now()\r\n      })\r\n    },\r\n    toggleTask(task) {\r\n      task.completed = !task.completed\r\n    },\r\n    deleteTask(task) {\r\n      const index = this.tasks.indexOf(task)\r\n      if (index > -1) {\r\n        this.tasks.splice(index, 1)\r\n      }\r\n    },\r\n    toggleApiTask(task) {\r\n      task.completed = !task.completed\r\n    },\r\n    deleteApiTask(task) {\r\n      const index = this.apiTasks.indexOf(task)\r\n      if (index > -1) {\r\n        this.apiTasks.splice(index, 1)\r\n      }\r\n    },\r\n    async loadTasksFromApi() {\r\n      this.loading = true\r\n      try {\r\n        const response = await axios.get('https://dummyjson.com/todos?limit=5')\r\n        this.apiTasks = response.data.todos\r\n      } catch (error) {\r\n        console.error('Error cargando tareas:', error)\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n@import 'bootstrap/dist/css/bootstrap.min.css';\r\n@import 'bootstrap-icons/font/bootstrap-icons.css';\r\n</style>"],"mappings":";AA8DA,OAAAA,QAAA;AACA,OAAAC,QAAA;AACA,OAAAC,KAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAJ,QAAA;IACAC;EACA;EACAI,KAAA;IACA;MACAC,KAAA;MACAC,QAAA;MACAC,OAAA;IACA;EACA;EACAC,OAAA;IACAC,QAAAC,IAAA;MACA,KAAAL,KAAA,CAAAM,IAAA;QACA,GAAAD,IAAA;QACAE,EAAA,EAAAC,IAAA,CAAAC,GAAA;MACA;IACA;IACAC,WAAAL,IAAA;MACAA,IAAA,CAAAM,SAAA,IAAAN,IAAA,CAAAM,SAAA;IACA;IACAC,WAAAP,IAAA;MACA,MAAAQ,KAAA,QAAAb,KAAA,CAAAc,OAAA,CAAAT,IAAA;MACA,IAAAQ,KAAA;QACA,KAAAb,KAAA,CAAAe,MAAA,CAAAF,KAAA;MACA;IACA;IACAG,cAAAX,IAAA;MACAA,IAAA,CAAAM,SAAA,IAAAN,IAAA,CAAAM,SAAA;IACA;IACAM,cAAAZ,IAAA;MACA,MAAAQ,KAAA,QAAAZ,QAAA,CAAAa,OAAA,CAAAT,IAAA;MACA,IAAAQ,KAAA;QACA,KAAAZ,QAAA,CAA